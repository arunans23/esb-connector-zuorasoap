<template name="execute" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="zobjectType" description="The type of zobject to be executed."/>
    <parameter name="synchronous"
               description="Indicates if the call is synchronous or asynchronous."/>
    <parameter name="zobjects"
               description="The list of one or more IDs for the objects to be deleted."/>
    <sequence>
        <payloadFactory>
            <format>
                <soapenv:Envelope xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/"
                                  xmlns:urn="http://api.zuora.com/">
                    <soapenv:Header>
                        <urn:SessionHeader>
                            <urn:session>$1</urn:session>
                        </urn:SessionHeader>
                    </soapenv:Header>
                    <soapenv:Body>
                        <urn:execute>
                            <urn:type>$2</urn:type>
                            <urn:synchronous>$3</urn:synchronous>
                        </urn:execute>
                    </soapenv:Body>
                </soapenv:Envelope>
            </format>
            <args>
                <arg expression="$ctx:zuorasoap.sessionId"/>
                <arg expression="$func:zobjectType"/>
                <arg expression="$func:synchronous"/>
            </args>
        </payloadFactory>
        <class name="org.wso2.carbon.connector.zuorasoap.SetupExecuteZobjects"/>
        <property value="true" name="FORCE_ERROR_ON_SOAP_FAULT"/>
        <header name="To" expression="$ctx:uri.var.zuorasoap.apiUrl"/>
        <filter source="$ctx:zuorasoapBlocking" regex="true">
            <then>
                <call blocking="true">
                    <endpoint>
                        <default format="soap11"/>
                    </endpoint>
                </call>
            </then>
            <else>
                <call>
                    <endpoint>
                        <default format="soap11"/>
                    </endpoint>
                </call>
            </else>
        </filter>
    </sequence>
</template>